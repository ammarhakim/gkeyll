# -*- makefile-gmake -*-

SRC_DIRS := kernels zero apps data/adas
UNIT_DIRS := unit

PREFIX ?= ${HOME}/gkylsoft
SUPERLU_INC = $(PREFIX)/superlu/include
ifeq ($(UNAME_S),Linux)
	SUPERLU_LIB_DIR = $(PREFIX)/superlu/lib64
	SUPERLU_LIB = $(PREFIX)/superlu/lib64/libsuperlu.a
else
	SUPERLU_LIB_DIR = $(PREFIX)/superlu/lib
	SUPERLU_LIB = $(PREFIX)/superlu/lib/libsuperlu.a
endif

CORELLIB := ../$(BUILD_DIR)/core/libg0core.so
CORESLLIB := 
LLIB := ../$(BUILD_DIR)/gyrokinetic/libg0gyrokinetic.so
SLLIB := 
SRCS := $(shell find $(SRC_DIRS) -name *.c)
ifdef USING_NVCC
	SRCS += $(shell find $(SRC_DIRS) -name *.cu)
	SRCS += $(shell find $(UNIT_DIRS) -name *.cu)
endif
OBJS := $(SRCS:%=../$(BUILD_DIR)/gyrokinetic/%.o)
DEPS := $(OBJS:.o=.d)

UNITS := $(patsubst %.c,../${BUILD_DIR}/gyrokinetic/%,$(wildcard unit/ctest_*.c))
MPI_UNITS := $(patsubst %.c,../${BUILD_DIR}/gyrokinetic/%,$(wildcard unit/mctest_*.c))
LUA_UNITS := $(patsubst %.c,../${BUILD_DIR}/gyrokinetic/%,$(wildcard unit/lctest_*.c))

# We need to build CUDA unit-test objects                                                                                                                                            
UNIT_CU_SRCS =
UNIT_CU_OBJS =
ifdef USING_NVCC
    UNIT_CU_SRCS = 
    UNIT_CU_OBJS = $(UNIT_CU_SRCS:%=../$(BUILD_DIR)/gyrokinetic/%.o)
endif

REGS := $(patsubst %.c,../${BUILD_DIR}/gyrokinetic/%,$(wildcard creg/rt_*.c))

KERN_INC_DIRS = $(shell find kernels -type d)
KERN_INCLUDES = $(addprefix -I,$(KERN_INC_DIRS))
EXT_INCS := -I${MPI_INC_DIR} -I${NCCL_INC_DIR} -I${CUDSS_INC_DIR} -I${LUA_INC_DIR} -I${LAPACK_INC} -I${SUPERLU_INC}
CORE_INCS := -I../core/kernels/array_average -I../core/kernels/array_integrate -I../core/kernels/basis -I../core/kernels/bin_op -I../core/kernels/dg_interpolate -I../core/kernels/skin_surf_from_ghost -I../core/apps -I../core/zero -I../core/minus -I../core/minus/STC/include -I../zero
MOMENTS_INCS := -I../moments/kernels/fem_poisson -I../moments/apps -I../moments/zero
VLASOV_INCS := -I../vlasov/kernels/advection -I../vlasov/kernels/canonical_pb -I../vlasov/kernels/dg_diffusion_fluid -I../vlasov/kernels/dg_diffusion_gen -I../vlasov/kernels/dg_diffusion_vlasov -I../vlasov/kernels/euler -I../vlasov/kernels/fpo -I../vlasov/kernels/lbo_vlasov -I../vlasov/kernels/maxwell -I../vlasov/kernels/sr_vlasov -I../vlasov/kernels/vlasov -I../vlasov/kernels/vlasov_poisson -I../vlasov/kernels/positivity_shift_vlasov -I../vlasov/apps -I../vlasov/zero
INCS := ${EXT_INCS} ${CORE_INCS} ${MOMENTS_INCS} ${VLASOV_INCS} -Ikernels -Izero -Iapps -Icreg -Idata/adas $(KERN_INCLUDES)

CORE_LIB_DIR := -L../${BUILD_DIR}/core
CORE_LIB := -lg0core

EXEC_LIB_DIRS = -L${SUPERLU_LIB_DIR} -L${MPI_LIB_DIR} -L${NCCL_LIB_DIR} -L${CUDSS_LIB_DIR} -L${MPI_LIB_DIR} -L${LUA_LIB_DIR}
EXEC_EXT_LIBS = -lsuperlu ${LAPACK_LIB} ${CUDA_LIBS} ${MPI_RPATH} ${MPI_LIBS} ${NCCL_LIBS} ${CUDSS_RPATH} ${CUDSS_LIBS} ${LUA_RPATH} ${LUA_LIBS} -lm -lpthread -ldl
EXEC_LIBS = -L../${BUILD_DIR}/gyrokinetic ${LLIB} ${SLLIB} ${CORE_LIB_DIR} ${CORE_LIB} ${EXEC_EXT_LIBS}

LDFLAGS += -Wl,-rpath,./${BUILD_DIR}/core
LDFLAGS += -Wl,-rpath,./${BUILD_DIR}/moments
LDFLAGS += -Wl,-rpath,./${BUILD_DIR}/vlasov
LDFLAGS += -Wl,-rpath,./${BUILD_DIR}/gyrokinetic

LDFLAGS += -Wl,-rpath,../${BUILD_DIR}/core
LDFLAGS += -Wl,-rpath,../${BUILD_DIR}/moments
LDFLAGS += -Wl,-rpath,../${BUILD_DIR}/vlasov
LDFLAGS += -Wl,-rpath,../${BUILD_DIR}/gyrokinetic

unit: ${LLIB} ${SLLIB} $(UNITS) ${MPI_UNITS} ## Build unit tests
regression: ${LLIB} ${SLLIB} ${REGS} creg/rt_arg_parse.h ## Build regression tests

.PHONY: all
all: $(LLIB) $(SLLIB) ## Build all targets
	${MKDIR_P} ${INSTALL_PREFIX}/${PROJ_NAME}/share/adas
	cp ./data/adas/radiation_fit_parameters.txt ${INSTALL_PREFIX}/${PROJ_NAME}/share/adas
.DEFAULT_GOAL := all

# c -> o files
../$(BUILD_DIR)/gyrokinetic/%.c.o: %.c
	$(MKDIR_P) $(dir $@)
	$(CC) -c $(CFLAGS) $(ARCH_FLAGS) $(INCS) $< -o $@

# Build commands for CUDA source                                                                                                                                                     
../$(BUILD_DIR)/gyrokinetic/%.cu.o: %.cu
	$(MKDIR_P) $(dir $@)
	$(CC) -c $(CFLAGS) $(NVCC_FLAGS) $(INCS) $< -o $@

# Unit tests
$(UNITS): ../${BUILD_DIR}/gyrokinetic/unit/%: unit/%.c $(LLIB) $(SLLIB)
	$(MKDIR_P) ../${BUILD_DIR}/gyrokinetic/unit
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $< -I. $(INCS) ${EXEC_LIB_DIRS} ${EXEC_LIBS}

# MPI unit tests
$(MPI_UNITS): ../${BUILD_DIR}/gyrokinetic/unit/%: unit/%.c $(LLIB) $(SLLIB)
	$(MKDIR_P) ../${BUILD_DIR}/gyrokinetic/unit
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $< -I. $(INCS) ${EXEC_LIB_DIRS} ${EXEC_LIBS}

# Regression tests
$(REGS): ../${BUILD_DIR}/gyrokinetic/creg/%: creg/%.c $(LLIB) $(SLLIB)
	$(MKDIR_P) ../${BUILD_DIR}/gyrokinetic/creg
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $< -I. $(INCS) ${EXEC_LIB_DIRS} ${EXEC_LIBS}

ifdef USING_NVCC
../$(BUILD_DIR)/gyrokinetic/kernels/ambi_bolt_potential/%.c.o : kernels/ambi_bolt_potential/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/bgk_gyrokinetic/%.c.o : kernels/bgk_gyrokinetic/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/deflate_geo/%.c.o : kernels/deflate_geo/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/deflate_surf/%.c.o : kernels/deflate_surf/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/derived_geo/%.c.o : kernels/derived_geo/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/dg_diffusion_gyrokinetic/%.c.o : kernels/dg_diffusion_gyrokinetic/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/fem_parproj/%.c.o : kernels/fem_parproj/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/fem_poisson_perp/%.c.o : kernels/fem_poisson_perp/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/gyrokinetic/%.c.o : kernels/gyrokinetic/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/gyrokinetic_pol_density/%.c.o : kernels/gyrokinetic_pol_density/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/inflate_surf/%.c.o : kernels/inflate_surf/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/lbo_gyrokinetic/%.c.o : kernels/lbo_gyrokinetic/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/neutral/%.c.o : kernels/neutral/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/positivity_shift_gyrokinetic/%.c.o : kernels/positivity_shift_gyrokinetic/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/rad/%.c.o : kernels/rad/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/translate_dim/%.c.o : kernels/translate_dim/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@

../$(BUILD_DIR)/gyrokinetic/kernels/twistshift/%.c.o : kernels/twistshift/%.c
	$(MKDIR_P) $(dir $@)
	$(CC) $(CFLAGS) $(NVCC_FLAGS) $(INCS) -c $< -o $@
endif

# build lib
$(LLIB): $(OBJS)
	$(MKDIR_P) $(dir $@)
ifeq ($(UNAME),Linux)
ifdef USING_NVCC
	$(CC) -shared -o $@ ../$(BUILD_DIR)/core/minus/*.o ../$(BUILD_DIR)/core/kernels/*/*.o ../$(BUILD_DIR)/core/zero/*.o ../$(BUILD_DIR)/core/apps/*.o ../$(BUILD_DIR)/moments/zero/*.o ../$(BUILD_DIR)/moments/kernels/*/*.o ../$(BUILD_DIR)/moments/apps/*.o ../$(BUILD_DIR)/moments/amr/*.o ../$(BUILD_DIR)/vlasov/kernels/*/*.o ../$(BUILD_DIR)/vlasov/zero/*.o ../$(BUILD_DIR)/vlasov/apps/*.o ../$(BUILD_DIR)/gyrokinetic/zero/*.o ../$(BUILD_DIR)/gyrokinetic/apps/*.o ../$(BUILD_DIR)/gyrokinetic/data/adas/*.o ../$(BUILD_DIR)/gyrokinetic/kernels/*/*.o -Xlinker=-soname -Xlinker=libg0gyrokinetic.so -L${SUPERLU_LIB_DIR} -L${MPI_LIB_DIR} -L${NCCL_LIB_DIR} -L${CUDSS_LIB_DIR} -L${LUA_LIB_DIR} -L${LAPACK_LIB_DIR} -lsuperlu ${LAPACK_LIB} ${MPI_RPATH} ${MPI_LIBS} ${NCCL_LIBS} ${CUDSS_RPATH} ${CUDSS_LIBS} ${LUA_RPATH} ${LUA_LIBS} -lm -lpthread -ldl -arch=sm_${CUDA_ARCH} -rdc=true --compiler-options="-fPIC"
else
	$(CC) -shared -o $@ ../$(BUILD_DIR)/core/minus/*.o ../$(BUILD_DIR)/core/kernels/*/*.o ../$(BUILD_DIR)/core/zero/*.o ../$(BUILD_DIR)/core/apps/*.o ../$(BUILD_DIR)/moments/zero/*.o ../$(BUILD_DIR)/moments/kernels/*/*.o ../$(BUILD_DIR)/moments/apps/*.o ../$(BUILD_DIR)/moments/amr/*.o ../$(BUILD_DIR)/vlasov/kernels/*/*.o ../$(BUILD_DIR)/vlasov/zero/*.o ../$(BUILD_DIR)/vlasov/apps/*.o ../$(BUILD_DIR)/gyrokinetic/zero/*.o ../$(BUILD_DIR)/gyrokinetic/apps/*.o ../$(BUILD_DIR)/gyrokinetic/data/adas/*.o ../$(BUILD_DIR)/gyrokinetic/kernels/*/*.o -Wl,-soname,libg0gyrokinetic.so -L${SUPERLU_LIB_DIR} -L${MPI_LIB_DIR} -L${NCCL_LIB_DIR} -L${CUDSS_LIB_DIR} -L${LUA_LIB_DIR} -L${LAPACK_LIB_DIR} -lsuperlu ${LAPACK_LIB} ${MPI_RPATH} ${MPI_LIBS} ${NCCL_LIBS} ${CUDSS_RPATH} ${CUDSS_LIBS} ${LUA_RPATH} ${LUA_LIBS} -lm -lpthread -ldl
endif
else
	$(CC) -shared -o $@ ../$(BUILD_DIR)/core/minus/*.o ../$(BUILD_DIR)/core/kernels/*/*.o ../$(BUILD_DIR)/core/zero/*.o ../$(BUILD_DIR)/core/apps/*.o ../$(BUILD_DIR)/moments/zero/*.o ../$(BUILD_DIR)/moments/kernels/*/*.o ../$(BUILD_DIR)/moments/apps/*.o ../$(BUILD_DIR)/moments/amr/*.o ../$(BUILD_DIR)/vlasov/kernels/*/*.o ../$(BUILD_DIR)/vlasov/zero/*.o ../$(BUILD_DIR)/vlasov/apps/*.o ../$(BUILD_DIR)/gyrokinetic/zero/*.o ../$(BUILD_DIR)/gyrokinetic/apps/*.o ../$(BUILD_DIR)/gyrokinetic/data/adas/*.o ../$(BUILD_DIR)/gyrokinetic/kernels/*/*.o -Wl,-install_name,@rpath/libg0gyrokinetic.so -L${SUPERLU_LIB_DIR} -L${MPI_LIB_DIR} -L${NCCL_LIB_DIR}-L${CUDSS_LIB_DIR} -L${LUA_LIB_DIR} -L${LAPACK_LIB_DIR} -lsuperlu ${LAPACK_LIB} ${MPI_RPATH} ${MPI_LIBS} ${CUDSS_RPATH} ${CUDSS_LIBS} ${NCCL_LIBS} ${LUA_RPATH} ${LUA_LIBS} -lm -lpthread -ldl
endif

$(SLLIB): $(OBJS)
	$(MKDIR_P) $(dir $@)
	ar -crs $@ ../$(BUILD_DIR)/core/*/*.o ../$(BUILD_DIR)/core/*/*/*.o ../$(BUILD_DIR)/moments/*/*.o ../$(BUILD_DIR)/moments/*/*/*.o ../$(BUILD_DIR)/vlasov/*/*.o ../$(BUILD_DIR)/vlasov/*/*/*.o ../$(BUILD_DIR)/gyrokinetic/*/*.o ../$(BUILD_DIR)/gyrokinetic/*/*/*.o

.PHONY: check valcheck
# Run all unit tests
check: unit ## Build (if needed) and run all unit tests
	$(foreach unit,${UNITS},echo $(unit); $(unit) -E;)

valcheck: unit ## Run valgrind on unit test
	$(foreach unit,$(UNITS),valgrind --leak-check=full --show-leak-kinds=all --track-origins=yes --show-error-list=yes $(unit) --exec=never 2>$(unit)_val_err 1>/dev/null;)
	$(foreach unit,$(UNITS),../core/minus/checkval.sh $(unit);)

-include $(DEPS)

# Headers to install
INSTALL_HEADERS := $(shell ls kernels/*/gkyl_*.h apps/gkyl_*.h zero/gkyl_*.h data/adas/*.h | grep -v "priv" | sort)

.PHONY: install
install: all
# Construct install 
	$(MKDIR_P) ${INSTALL_PREFIX}/${PROJ_NAME}/include
	${MKDIR_P} ${INSTALL_PREFIX}/${PROJ_NAME}/lib
	${MKDIR_P} ${INSTALL_PREFIX}/${PROJ_NAME}/bin
	${MKDIR_P} ${INSTALL_PREFIX}/${PROJ_NAME}/share
	${MKDIR_P} ${INSTALL_PREFIX}/${PROJ_NAME}/share/adas
# Headers
	cp ${INSTALL_HEADERS} ${INSTALL_PREFIX}/${PROJ_NAME}/include
# libraries
	cp -f $(LLIB) ${INSTALL_PREFIX}/${PROJ_NAME}/lib/libg0gyrokinetic.so

.PHONY: clean
clean: ## Clean build output
	rm -rf ../${BUILD_DIR}/gyrokinetic
